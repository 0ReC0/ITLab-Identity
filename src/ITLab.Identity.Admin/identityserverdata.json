{
  "IdentityServerData": {
    "IdentityResources": [
      {
        "Name": "roles",
        "Enabled": true,
        "DisplayName": "Roles",
        "UserClaims": [
          "role"
        ]
      },
      {
        "Name": "openid",
        "Enabled": true,
        "Required": true,
        "DisplayName": "Your user identifier",
        "UserClaims": [
          "sub"
        ]
      },
      {
        "Name": "profile",
        "Enabled": true,
        "DisplayName": "User profile",
        "Description": "Your user profile information (first name, last name, etc.)",
        "Emphasize": true,
        "UserClaims": [
          "name",
          "family_name",
          "given_name",
          "middle_name",
          "nickname",
          "preferred_username",
          "profile",
          "picture",
          "website",
          "gender",
          "birthdate",
          "zoneinfo",
          "locale",
          "updated_at"
        ]
      },
      {
        "Name": "email",
        "Enabled": true,
        "DisplayName": "Your email address",
        "Emphasize": true,
        "UserClaims": [
          "email",
          "email_verified"
        ]
      },
      {
        "Name": "address",
        "Enabled": true,
        "DisplayName": "Your address",
        "Emphasize": true,
        "UserClaims": [
          "address"
        ]
      }
    ],
    "ApiResources": [
      {
        "Name": "itlab",
        "DisplayName": "ITLab manage api",
        "UserClaims": [
          "itlab",
          "role"
        ],
        "Scopes": [
          {
            "Name": "itlab.salary",
            "DisplayName": "Salary API",
            "Required": true
          },
          {
            "Name": "itlab.reports",
            "DisplayName": "Reports API",
            "Required": true
          },
          {
            "Name": "itlab.projects",
            "DisplayName": "Projects API",
            "Required": true
          },
          {
            "Name": "itlab.events",
            "DisplayName": "ITLab events and equipment api",
            "Required": true
          }
        ]
      }
    ],
    "Clients": {
      "AdminUI": {
        "ClientName": "Admin UI client",
        "RequireConsent": false,
        "AllowedScopes": [
          "openid",
          "email",
          "profile",
          "roles"
        ],
        "AllowedGrantTypes": [
          "hybrid"
        ]
      },
      "itlab_spa": {
        "ClientName": "ITLab SPA Site",
        "RequireClientSecret": false,
        "RequireConsent": false,
        "AllowedScopes": [
          "itlab.events",
          "itlab.projects",
          "itlab.salary",
          "itlab.reports",
          "openid",
          "profile",
          "roles"
        ],
        "AllowedGrantTypes": [
          "authorization_code"
        ]
      },
      "itlab_salary": {
        "ClientName": "ItLab salary client",
        "RequireClientSecret": true,
        "AllowedScopes": [
          "itlab.events"
        ],
        "AllowedGrantTypes": [
          "client_credentials",
          "password"
        ]
      },
      "itlab_mobile_app": {
        "ClientName": "ITLab mobile app",
        "RequireClientSecret": false,
        "RequirePkce": true,
        "AllowPlainTextPkce": true,
        "AllowAccessTokensViaBrowser": true,
        "RequireConsent": false,
        "AllowedScopes": [
          "roles",
          "openid",
          "itlab.projects",
          "itlab.reports",
          "itlab.salary",
          "profile",
          "itlab.events"
        ],
        "RedirectUris": [
          "ru.rtuitlab.itlab:/oauth2redirect"
        ],
        "AllowedGrantTypes": [
          "authorization_code",
          "ru.rtuitlab.itlab:/oauth2redirect/logout"
        ]
      }
    }
  }
}